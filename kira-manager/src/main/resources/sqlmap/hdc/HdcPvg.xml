<mapper namespace="HdcPvg">

	<resultMap id="hdcPvgResult" type="HdcPvg">
		<result column="id" property="id"/>
		<result column="roleId" property="roleid"/>
		<result column="associationId" property="associationid"/>
		<result column="associationType" property="associationtype"/>
	</resultMap>

	<insert id="insert" parameterType="HdcPvg">
		INSERT INTO hdc_pvg
			(id, roleId, associationId, associationType)
		VALUES
			(#{id}, #{roleid}, #{associationid}, #{associationtype})
		<selectKey resultType="Integer" keyProperty="id">
           SELECT LAST_INSERT_ID()
        </selectKey>			
	</insert>

	<update id="update" parameterType="HdcPvg">
		UPDATE
			hdc_pvg
		SET
			roleId = #{roleid},
			associationId = #{associationid},
			associationType = #{associationtype}
		WHERE
			id = #{id}
	</update>

	<delete id="delete" parameterType="java.lang.Integer">
		DELETE FROM
			hdc_pvg
		WHERE
			id = #{id}
	</delete>
	
	<select id="select" parameterType="java.lang.Integer" resultMap="hdcPvgResult">
		SELECT
			id,
			roleId,
			associationId,
			associationType
		FROM
			hdc_pvg
		WHERE
			id = #{id}
	</select>

	<sql id="criteriaWhereClause">
		  <if test="id != null and id != ''" >
			  WHERE id = #{id}
		  </if>
	</sql>
	
	<sql id="orderByClause">
		order by
		<if test="orderByClause != null and orderByClause != ''">
			${orderByClause}
		</if>
		<if test="orderByClause == null and orderByClause == ''">
			id ASC
		</if>
	</sql>	

	<select id="list" parameterType="HdcPvgCriteria" resultMap="hdcPvgResult">
		SELECT
			id,
			roleId,
			associationId,
			associationType
		FROM
			hdc_pvg
		<include refid="criteriaWhereClause"/>
		<include refid="orderByClause" />
	</select>

	<select id="count" parameterType="HdcPvgCriteria" resultType="int">
		SELECT
			COUNT(*)
		FROM
			hdc_pvg
		<include refid="criteriaWhereClause"/>
	</select>

</mapper>